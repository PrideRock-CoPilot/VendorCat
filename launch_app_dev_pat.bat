@echo off
setlocal

cd /d "%~dp0"
set "TVENDOR_ENV_FILE=setup\config\tvendor.dev_pat.env"
set "TVENDOR_ENV_FORCE=true"
set "TVENDOR_ENV=dev"
set "TVENDOR_USE_LOCAL_DB=true"
