echo   TVENDOR_LOCAL_DB_SEED_PROFILE=%TVENDOR_LOCAL_DB_SEED_PROFILE%
echo   TVENDOR_LOCAL_DB_REBUILD_MODE=%TVENDOR_LOCAL_DB_REBUILD_MODE%
echo   TVENDOR_DEV_ALLOW_ALL_ACCESS=%TVENDOR_DEV_ALLOW_ALL_ACCESS%
