# Vendor Catalog runtime + schema bootstrap configuration.
# This file is loaded by launch_app.bat when TVENDOR_ENV_FILE is not set.

# Environment profile (dev/development/local/prod)
TVENDOR_ENV=dev

# Runtime mode
TVENDOR_USE_LOCAL_DB=true
TVENDOR_LOCAL_DB_PATH=setup/local_db/twvendor_local.db
# Local DB seed behavior on reset/rebuild: true includes sample data, false schema-only.
TVENDOR_LOCAL_DB_SEED=false
# Seed profile when TVENDOR_LOCAL_DB_SEED=true:
# baseline = lightweight sample dataset
# full     = enterprise-scale synthetic dataset (100+ vendors, all tables populated)
TVENDOR_LOCAL_DB_SEED_PROFILE=baseline
# Local DB rebuild mode:
# always = clean reset on every launch (recommended for no demo data carryover)
# prompt = ask each launch (clean rebuild or keep data + apply schema updates)
# keep   = keep data and apply schema updates every launch
TVENDOR_LOCAL_DB_REBUILD_MODE=always
TVENDOR_LOCKED_MODE=false
TVENDOR_DEV_ALLOW_ALL_ACCESS=false
PORT=8000

# Databricks workspace connectivity (set these per environment)
DATABRICKS_SERVER_HOSTNAME=
DATABRICKS_HTTP_PATH=
DATABRICKS_WAREHOUSE_ID=
# Authentication options:
# 1) PAT token (legacy/local testing): DATABRICKS_TOKEN
# 2) OAuth service principal (Databricks Apps default): DATABRICKS_CLIENT_ID + DATABRICKS_CLIENT_SECRET
DATABRICKS_TOKEN=
DATABRICKS_CLIENT_ID=
DATABRICKS_CLIENT_SECRET=

# Target Unity Catalog objects used by the app
TVENDOR_FQ_SCHEMA=a1_dlk.twanalytics
TVENDOR_CATALOG=a1_dlk
TVENDOR_SCHEMA=twanalytics
TVENDOR_ENFORCE_PROD_SQL_POLICY=true
TVENDOR_ALLOWED_WRITE_VERBS=INSERT,UPDATE

# Standalone schema bootstrap SQL (manual run only)
TVENDOR_SCHEMA_BOOTSTRAP_SQL=setup/databricks/001_create_databricks_schema.sql
