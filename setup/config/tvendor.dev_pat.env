# Vendor Catalog dev profile: local SQLite runtime with optional Databricks settings kept for reference.
# The launcher enforces local DB mode for this profile.

# Environment profile
TVENDOR_ENV=dev

# Runtime mode
TVENDOR_USE_LOCAL_DB=true
TVENDOR_LOCAL_DB_PATH=setup/local_db/twvendor_local.db
TVENDOR_LOCAL_DB_SEED=false
TVENDOR_LOCAL_DB_REBUILD_MODE=keep
TVENDOR_LOCKED_MODE=false
TVENDOR_DEV_ALLOW_ALL_ACCESS=true
TVENDOR_TEST_USER=dev_admin@example.com
PORT=8000

# Databricks connectivity
DATABRICKS_SERVER_HOSTNAME=
# Preferred: full SQL HTTP path, for example /sql/1.0/warehouses/<warehouse-id>
DATABRICKS_HTTP_PATH=
# Optional: warehouse id if HTTP path not set
DATABRICKS_WAREHOUSE_ID=

# Authentication (dev PAT mode)
DATABRICKS_TOKEN=
DATABRICKS_CLIENT_ID=
DATABRICKS_CLIENT_SECRET=

# Target Unity Catalog objects
TVENDOR_FQ_SCHEMA=a1_dlk.twvendor
TVENDOR_CATALOG=a1_dlk
TVENDOR_SCHEMA=twvendor
TVENDOR_ENFORCE_PROD_SQL_POLICY=true
TVENDOR_ALLOWED_WRITE_VERBS=INSERT,UPDATE

# Standalone schema bootstrap SQL (manual run only)
TVENDOR_SCHEMA_BOOTSTRAP_SQL=setup/databricks/001_create_databricks_schema.sql
